{
  "config_version": "2.0.0",
  "metadata": {
    "name": "Zettlr",
    "display_name": "Zettlr",
    "description": "Open-source note-taking application that works with Markdown files."
  },
  "source": {
    "type": "github",
    "owner": "Zettlr",
    "repo": "Zettlr",
    "prerelease": false
  },
  "appimage": {
    "naming": {
      "template": "{rename}-{latest_version}-{characteristic_suffix}.AppImage",
      "target_name": "zettlr",
      "architectures": [
        "amd64",
        "x86_64"
      ]
    }
  },
  "verification": {
    "method": "checksum_file",
    "checksum_file": {
      "filename": "SHA256SUMS.txt",
      "algorithm": "sha256"
    }
  },
  "icon": {
    "method": "extraction",
    "filename": "zettlr.png",
    "download_url": "https://raw.githubusercontent.com/Zettlr/Zettlr/master/resources/icons/png/256x256.png"
  }
}