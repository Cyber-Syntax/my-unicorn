    "description": "Epic Games and GOG launcher for Linux"
  },
  "source": {
    "type": "github",
    "owner": "Heroic-Games-Launcher",
    "repo": "HeroicGamesLauncher",
    "prerelease": false
  },
  "appimage": {
    "naming": {
