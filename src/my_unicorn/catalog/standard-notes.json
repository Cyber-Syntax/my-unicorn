{
  "config_version": "2.0.0",
  "metadata": {
    "name": "app",
    "display_name": "app",
    "description": "Encrypted note-taking app with end-to-end encryption"
  },
  "source": {
    "type": "github",
    "owner": "standardnotes",
    "repo": "app",
    "prerelease": false
  },
  "appimage": {
    "naming": {
      "template": "standard-notes-{latest_version}-linux-{characteristic_suffix}.AppImage",
      "target_name": "standard-notes",
      "architectures": [
        "amd64",
        "x86_64"
      ]
    }
  },
  "verification": {
    "method": "checksum_file",
    "checksum_file": {
      "filename": "SHA256SUMS",
      "algorithm": "sha256"
    }
  },
  "icon": {
    "method": "extraction",
    "filename": "standard-notes.png"
  }
}