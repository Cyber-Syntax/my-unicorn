{
  "config_version": "2.0.0",
  "metadata": {
    "name": "AppFlowy",
    "display_name": "AppFlowy",
    "description": "Open source Notion alternative with offline-first approach"
  },
  "source": {
    "type": "github",
    "owner": "AppFlowy-IO",
    "repo": "AppFlowy",
    "prerelease": false
  },
  "appimage": {
    "naming": {
      "template": "{rename}-{latest_version}-linux-{characteristic_suffix}.AppImage",
      "target_name": "appflowy",
      "architectures": [
        "amd64",
        "x86_64"
      ]
    }
  },
  "verification": {
    "method": "digest"
  },
  "icon": {
    "method": "extraction",
    "filename": "appflowy.png"
  }
}