{
  "config_version": "2.0.0",
  "metadata": {
    "name": "tagspaces",
    "display_name": "tagspaces",
    "description": "Offline file organizer and manager with tagging support"
  },
  "source": {
    "type": "github",
    "owner": "tagspaces",
    "repo": "tagspaces",
    "prerelease": false
  },
  "appimage": {
    "naming": {
      "template": "{repo}-{latest_version}-{characteristic_suffix}.AppImage",
      "target_name": "tagspaces",
      "architectures": [
        "amd64",
        "x86_64"
      ]
    }
  },
  "verification": {
    "method": "checksum_file",
    "checksum_file": {
      "filename": "SHA256SUMS.txt",
      "algorithm": "sha256"
    }
  },
  "icon": {
    "method": "extraction",
    "filename": "tagspaces.png",
    "download_url": "https://raw.githubusercontent.com/tagspaces/tagspaces/master/assets/icon.png"
  }
}