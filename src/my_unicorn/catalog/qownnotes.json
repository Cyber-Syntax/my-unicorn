{
  "config_version": "2.0.0",
  "metadata": {
    "name": "QOwnNotes",
    "display_name": "QOwnNotes",
    "description": "Plain-text note-taking with Markdown and ownCloud integration"
  },
  "source": {
    "type": "github",
    "owner": "pbek",
    "repo": "QOwnNotes",
    "prerelease": false
  },
  "appimage": {
    "naming": {
      "template": "{repo}-{characteristic_suffix}.AppImage",
      "target_name": "qownnotes",
      "architectures": [
        "amd64",
        "x86_64"
      ]
    }
  },
  "verification": {
    "method": "digest"
  },
  "icon": {
    "method": "extraction",
    "filename": "qownnotes.png",
    "download_url": "https://raw.githubusercontent.com/pbek/QOwnNotes/develop/icons/icon.png"
  }
}